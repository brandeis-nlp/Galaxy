<tool id="oaqa.evaluation" name="OAQA Evaluation" version="1.0.0">
  <description>Run the OAQA evaluation service at CMU</description>
  <command interpreter="lsd">oaqa_evaluation.lsd -gold=$gold -test=$test -annotation=$annotation -feature=$feature -output=$output</command>
  <inputs>
  	<param name="gold" type="data" format="lif" label="Gold Data"/>
  	<param name="test" type="data" format="lif" label="Test Data"/>
  	<param name="annotation" type="text" label="Annotation Type"/>
  	<param name="feature" type="text" label="Feature Name"/>
  	<!--
  	<param name="goldType" type="text" value="http://vocab.lappsgrid.org/Token" label="Gold Annotation Type"/>
  	<param name="goldFeature" type="text" value="word" label="Gold Annotation Feature"/>
  	<param name="goldProducer" type="text" label="Gold Producer"/>
  	<param name="testType" type="text" value="http://vocab.lappsgrid.org/Token" label="Test Annotation Type"/>
  	<param name="testFeature" type="text" value="word" label="Test Annotation Feature"/>
  	<param name="testProducer" type="text" label="Test Producer"/>
  	-->
  </inputs>
  <outputs>
    <data name="output" format="html" label="HTML"/>
  </outputs>
  <help>
Performs evaluation comparing the test data to gold standard data.

The evaluation will be performed on the annotations in the last view in each document.
  </help>
</tool>
